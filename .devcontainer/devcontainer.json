{
  "name": "Python & Jupyter DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "jupyter.askForKernelRestart": false,
        "jupyter.kernels.computeAutoDefault": true,
        "python.terminal.activateEnvironment": false,
        "python.envFile": "",
        "python.experiments.enabled": false
      }
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && python -m ipykernel install --user --name devcontainer --display-name 'Python 3.12 (DevContainer)'"
}
